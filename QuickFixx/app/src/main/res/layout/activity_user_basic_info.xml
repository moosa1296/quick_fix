<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_user_basic_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="#fff"
        tools:context="com.example.hp.quickfixx.UserBasicInfo">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:layout_gravity="left"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/BasicInfo_ProfileImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/upload_image_icon"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:paddingTop="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                app:met_baseColor="#0f0f10"
                app:met_underlineColor="#0f0f10"
                app:met_primaryColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="20dp"
                android:drawableRight="@drawable/drawable_right_name"
                android:id="@+id/BasicInfo_FirstName" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                app:met_baseColor="#0f0f10"
                app:met_underlineColor="#0f0f10"
                app:met_primaryColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="20dp"
                android:drawableRight="@drawable/drawable_right_name"
                android:id="@+id/BasicInfo_LastName" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                app:met_baseColor="#0f0f10"
                app:met_underlineColor="#0f0f10"
                app:met_primaryColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="20dp"
                app:met_minCharacters="1"
                app:met_maxCharacters="3"
                android:drawableRight="@drawable/drawable_right_address"
                android:id="@+id/BasicInfo_Age"
                android:inputType="number"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cell Phone"
                android:inputType="phone"
                app:met_baseColor="#0f0f10"
                app:met_underlineColor="#0f0f10"
                app:met_primaryColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="20dp"
                app:met_minCharacters="11"
                app:met_maxCharacters="11"
                android:drawableRight="@drawable/drawable_right_phone"
                android:id="@+id/BasicInfo_CellPhone" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="-5dp"
                android:hint="Address"
                app:met_baseColor="#0f0f10"
                app:met_underlineColor="#0f0f10"
                app:met_primaryColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="20dp"
                android:drawableRight="@drawable/drawable_right_address"
                android:id="@+id/BasicInfo_Address" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="School you studied in"
                app:met_baseColor="#0f0f10"
                app:met_underlineColor="#0f0f10"
                app:met_primaryColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="20dp"
                android:drawableRight="@drawable/drawable_right_address"
                android:id="@+id/BasicInfo_School" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="College you studied in"
                app:met_baseColor="#0f0f10"
                app:met_underlineColor="#0f0f10"
                app:met_primaryColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="20dp"
                android:drawableRight="@drawable/drawable_right_address"
                android:id="@+id/BasicInfo_College" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="University you studied in"
                app:met_baseColor="#0f0f10"
                app:met_underlineColor="#0f0f10"
                app:met_primaryColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="20dp"
                android:drawableRight="@drawable/drawable_right_address"
                android:id="@+id/BasicInfo_University" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduction for Profile"
                android:inputType="text|textMultiLine"
                app:met_baseColor="#0f0f10"
                app:met_underlineColor="#0f0f10"
                app:met_primaryColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="20dp"
                app:met_maxCharacters="500"
                app:met_minCharacters="1"
                android:drawableRight="@drawable/drawable_right_description"
                android:id="@+id/BasicInfo_Introduction"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp">

            <com.gc.materialdesign.views.ButtonRectangle
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:text="SUBMIT"
                android:id="@+id/BasicInfo_SubmitBtn"/>


        </LinearLayout>

    </LinearLayout>
</ScrollView>